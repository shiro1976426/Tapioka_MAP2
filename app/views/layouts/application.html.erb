<!DOCTYPE html>
<html>
  <head>
    <title>Tapioka MAP</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header__title">
        <%= link_to "渋谷 Tapioka MAP", root_path, class: "header__title--text" %>
      </div>
      <div class="header__right">
        <%= link_to "MAP LINK", new_post_path, class: "header__right--btn" %>
      </div>
    </header>

    <div class="contents">
      <%= yield %>
    </div>

  </body>
</html>
